#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &physical_layout0;
    };
};

/ {
    physical_layout0: physical_layout0 {
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
        transform = <&default_transform>;
        keys
            /* --- 1段目 (y=0) --- */
            /* Left */  = <&key_physical_attrs 100 100   0  10 0 0 0>,
                          <&key_physical_attrs 100 100 100  10 0 0 0>,
                          <&key_physical_attrs 100 100 200  10 0 0 0>,
                          <&key_physical_attrs 100 100 300  10 0 0 0>,
                          <&key_physical_attrs 100 100 400  10 0 0 0>,
            /* Right */   <&key_physical_attrs 100 100 550  10 0 0 0>,
                          <&key_physical_attrs 100 100 650  10 0 0 0>,
                          <&key_physical_attrs 100 100 750  10 0 0 0>,
                          <&key_physical_attrs 100 100 850  10 0 0 0>,
                          <&key_physical_attrs 100 100 950  10 0 0 0>,
            
            /* --- 2段目 (y=100) --- */
            /* Left */    <&key_physical_attrs 100 100   0 120 0 0 0>,
                          <&key_physical_attrs 100 100 100 120 0 0 0>,
                          <&key_physical_attrs 100 100 200 120 0 0 0>,
                          <&key_physical_attrs 100 100 300 120 0 0 0>,
                          <&key_physical_attrs 100 100 400 120 0 0 0>,
            /* Right */   <&key_physical_attrs 100 100 550 120 0 0 0>,
                          <&key_physical_attrs 100 100 650 120 0 0 0>,
                          <&key_physical_attrs 100 100 750 120 0 0 0>,
                          <&key_physical_attrs 100 100 850 120 0 0 0>,
                          <&key_physical_attrs 100 100 950 120 0 0 0>,

            /* --- 3段目 (y=200) --- */
            /* Left */    <&key_physical_attrs 100 100   0 200 0 0 0>,
                          <&key_physical_attrs 100 100 100 200 0 0 0>,
                          <&key_physical_attrs 100 100 200 200 0 0 0>,
                          <&key_physical_attrs 100 100 300 200 0 0 0>,
                          <&key_physical_attrs 100 100 400 200 0 0 0>,
            /* Right */   <&key_physical_attrs 100 100 550 200 0 0 0>,
                          <&key_physical_attrs 100 100 650 200 0 0 0>,
                          <&key_physical_attrs 100 100 750 200 0 0 0>,
                          <&key_physical_attrs 100 100 850 200 0 0 0>,
                          <&key_physical_attrs 100 100 950 200 0 0 0>,

            /* --- 4段目 (y=300) --- */
            /* Left */    <&key_physical_attrs 100 100   0 300 0 0 0>,
                          <&key_physical_attrs 100 100 100 300 0 0 0>,
                          <&key_physical_attrs 100 100 200 300 0 0 0>,
                          <&key_physical_attrs 100 100 300 300 0 0 0>,
                          <&key_physical_attrs 100 100 400 300 0 0 0>,
            /* Right */   <&key_physical_attrs 100 100 550 300 0 0 0>,
                          <&key_physical_attrs 100 100 650 300 0 0 0>,
                          <&key_physical_attrs 100 100 750 300 0 0 0>,
                          <&key_physical_attrs 100 100 850 300 0 0 0>,
                          <&key_physical_attrs 100 100 950 300 0 0 0>;
    };
};


/ {
    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)  RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)  RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)  RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)  RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9)
        >;
    };
};


/ {
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";
        row-gpios
            = <&gpio0 6  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio1 0  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio1 13 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio1 4  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    };
};
