#include <dt-bindings/zmk/matrix_transform.h>
#include <layouts/common/matrix_transposed.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
        zmk,physical-layout = &physical_layout0;
    };

    default_transform: key_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)  RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)  RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)  RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)  RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9)
        >;
    };

    /* ここが Studio を通すための最重要ポイントです */
    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
        transform = <&default_transform>;
        keys  /* マトリックスの全40キー分を明示的に指定します */
            = <&kscan0 0 0>, <&kscan0 0 1>, <&kscan0 0 2>, <&kscan0 0 3>, <&kscan0 0 4>, <&kscan0 0 5>, <&kscan0 0 6>, <&kscan0 0 7>, <&kscan0 0 8>, <&kscan0 0 9>
            , <&kscan0 1 0>, <&kscan0 1 1>, <&kscan0 1 2>, <&kscan0 1 3>, <&kscan0 1 4>, <&kscan0 1 5>, <&kscan0 1 6>, <&kscan0 1 7>, <&kscan0 1 8>, <&kscan0 1 9>
            , <&kscan0 2 0>, <&kscan0 2 1>, <&kscan0 2 2>, <&kscan0 2 3>, <&kscan0 2 4>, <&kscan0 2 5>, <&kscan0 2 6>, <&kscan0 2 7>, <&kscan0 2 8>, <&kscan0 2 9>
            , <&kscan0 3 0>, <&kscan0 3 1>, <&kscan0 3 2>, <&kscan0 3 3>, <&kscan0 3 4>, <&kscan0 3 5>, <&kscan0 3 6>, <&kscan0 3 7>, <&kscan0 3 8>, <&kscan0 3 9>
            ;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        #key-cells = <2>; /* physical-layout で keys を使う場合は 2 にする必要があります */
        diode-direction = "col2row";
        row-gpios
            = <&gpio0 6  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio1 0  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio1 13 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio1 4  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    };
};
